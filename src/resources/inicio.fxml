<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="500" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #e0f7fa, #b2ebf2); -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.pantallaPrincipalController">

    <children>

        <!-- Menú superior -->
        <MenuBar>
            <menus>
                <Menu text="Archivo">
                    <items>
                        <MenuItem fx:id="newGame" text="Nuevo Juego" />
                        <SeparatorMenuItem />
                        <MenuItem fx:id="saveGame" text="Guardar" />
                        <MenuItem fx:id="loadGame" text="Cargar" />
                        <SeparatorMenuItem />
                        <MenuItem fx:id="quitGame" text="Salir" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <!-- Contenido principal -->
        <StackPane>
            <VBox alignment="CENTER" maxWidth="400" spacing="25.0" style="-fx-background-color: white;                          -fx-padding: 40;                          -fx-background-radius: 15;                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0.3, 0, 4);">

                <!-- Título -->
                <Text style="-fx-font-size: 32px;                              -fx-font-weight: bold;                              -fx-fill: #0277bd;                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 4, 0.2, 2, 2);" text="EL JUEGO DEL PINGÜINO" />

                <!-- Campo de usuario -->
                <TextField fx:id="userField" promptText="Usuario..." style="-fx-pref-width: 250;                                   -fx-font-size: 14px;                                   -fx-padding: 10;                                   -fx-background-radius: 8;" />

                <!-- Campo de contraseña -->
                <PasswordField fx:id="passField" promptText="Contraseña..." style="-fx-pref-width: 250;                                       -fx-font-size: 14px;                                       -fx-padding: 10;                                       -fx-background-radius: 8;" />

                <!-- Botones -->
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button fx:id="loginButton" onAction="#handleLogin" style="-fx-background-color: #039be5;                                        -fx-text-fill: white;                                        -fx-font-weight: bold;                                        -fx-font-size: 13px;                                        -fx-background-radius: 10;                                        -fx-padding: 10 20;" text="Iniciar Sesión" />

                        <Button fx:id="registerButton" onAction="#handleRegister" style="-fx-background-color: #eeeeee;                                        -fx-text-fill: #333;                                        -fx-font-size: 13px;                                        -fx-background-radius: 10;                                        -fx-padding: 10 20;" text="Registrarse" />
                    </children>
                </HBox>
            </VBox>
        </StackPane>

    </children>
</VBox>
