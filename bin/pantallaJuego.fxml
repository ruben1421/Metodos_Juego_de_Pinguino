<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="vista.pantallaJuegoController" style="-fx-background-color: #F4F4F4;">
    
    <MenuBar VBox.vgrow="NEVER" style="-fx-background-color: #2D2D2D;">
        <menus>
            <Menu mnemonicParsing="false" text="File" style="-fx-text-fill: white;">
                <items>
                    <MenuItem fx:id="newGame" mnemonicParsing="false" text="New" />
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem fx:id="saveGame" mnemonicParsing="false" text="Save" />
                    <MenuItem fx:id="loadGame" mnemonicParsing="false" text="Load" />
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem fx:id="quitGame" mnemonicParsing="false" text="Quit" />
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <BorderPane VBox.vgrow="ALWAYS">
        <center>
            <GridPane fx:id="tablero" gridLinesVisible="true" style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-width: 2;">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Start" style="-fx-font-size: 24; -fx-fill: #555555;">
                        <font>
                            <Font size="30.0" />
                        </font>
                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Finish" GridPane.columnIndex="4" GridPane.halignment="RIGHT" GridPane.rowIndex="9" 
                          style="-fx-font-size: 24; -fx-fill: #555555;">
                        <font>
                            <Font size="30.0" />
                        </font>
                    </Text>
                    <HBox spacing="20" GridPane.rowIndex="0" GridPane.columnIndex="0">
                        <children>
                            <Circle fx:id="P1" fill="BLUE" radius="20.0" stroke="BLACK" strokeType="INSIDE" 
                                    style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);"/>
                            <Circle fx:id="P2" fill="RED" radius="20.0" stroke="BLACK" strokeType="INSIDE" 
                                    style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);"/>
                            <Circle fx:id="P3" fill="GREEN" radius="20.0" stroke="BLACK" strokeType="INSIDE" 
                                    style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);"/>
                            <Circle fx:id="P4" fill="YELLOW" radius="20.0" stroke="BLACK" strokeType="INSIDE" 
                                    style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);"/>
                        </children>
                    </HBox>
                </children>
            </GridPane>
        </center>

        <bottom>
            <VBox spacing="15" style="-fx-background-color: #FFFFFF; -fx-padding: 20;">
                <children>
                    <HBox spacing="30" alignment="CENTER">
                        <children>
                            <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #E8F4FF; -fx-padding: 15; -fx-background-radius: 10;">
                                <children>
                                    <Text fx:id="dadoResultText" text="Dice Result: " style="-fx-font-size: 20; -fx-fill: #2C3E50;"/>
                                    <Button fx:id="dado" text="Roll Dice" style="-fx-font-size: 18; -fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;"/>
                                </children>
                            </VBox>

                            <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #F0F0F0; -fx-padding: 15; -fx-background-radius: 10;">
                                <children>
                                    <GridPane hgap="20" vgap="10">
                                        <columnConstraints>
                                            <ColumnConstraints prefWidth="150"/>
                                            <ColumnConstraints prefWidth="150"/>
                                            <ColumnConstraints prefWidth="150"/>
                                            <ColumnConstraints prefWidth="150"/>
                                        </columnConstraints>
                                        <children>
                                            <Text fx:id="rapido_t" text="Fast Dice: 0" style="-fx-font-size: 16; -fx-fill: #34495E;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                            <Text fx:id="lento_t" text="Slow Dice: 0" style="-fx-font-size: 16; -fx-fill: #34495E;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                            <Text fx:id="peces_t" text="Fish: 0" style="-fx-font-size: 16; -fx-fill: #34495E;" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                                            <Text fx:id="nieve_t" text="Snowballs: 0" style="-fx-font-size: 16; -fx-fill: #34495E;" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                                            
                                            <Button fx:id="rapido" text="Use" style="-fx-font-size: 14; -fx-background-color: #27AE60; -fx-text-fill: white; -fx-background-radius: 5;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                            <Button fx:id="lento" text="Use" style="-fx-font-size: 14; -fx-background-color: #F39C12; -fx-text-fill: white; -fx-background-radius: 5;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                            <Button fx:id="peces" text="Use" style="-fx-font-size: 14; -fx-background-color: #2980B9; -fx-text-fill: white; -fx-background-radius: 5;" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                                            <Button fx:id="nieve" text="Use" style="-fx-font-size: 14; -fx-background-color: #8E44AD; -fx-text-fill: white; -fx-background-radius: 5;" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                                        </children>
                                    </GridPane>
                                </children>
                            </VBox>

                            <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #FFF5E6; -fx-padding: 15; -fx-background-radius: 10;">
                                <children>
                                    <Text text="Event Log:" style="-fx-font-size: 18; -fx-fill: #2C3E50;"/>
                                    <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
                                        <content>
                                            <Text fx:id="eventos" style="-fx-font-size: 14; -fx-fill: #666666;"/>
                                        </content>
                                    </ScrollPane>
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                </children>
            </VBox>
        </bottom>
    </BorderPane>
</VBox>